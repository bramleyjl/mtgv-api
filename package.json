{
  "name": "server",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "axios": "^0.25.0",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "debug": ">=4.3.3",
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "mongodb": "^4.3.1",
    "morgan": ">=1.10.0",
    "nodemon": "^2.0.15",
    "npm": "^8.4.1",
    "react-markdown": "^8.0.0"
  },
  "devDependencies": {
    "concurrently": "^7.0.0"
  },
  "scripts": {
    "start": "concurrently \"nodemon app.js\" \"npm run client\"",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "production": "concurrently \"npm run server\" \"npm run serve\"",
    "server": "nodemon app.js",
    "serve": "cd client && serve -s build -p 3000",
    "pullBulkData": "node tools/pullBulkData.js",
    "pullCardNames": "node tools/pullCardNames.js"
  }
}
